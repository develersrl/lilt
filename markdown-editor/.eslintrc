{
    "parser": "babel-eslint",
    "extends": [
       "eslint:recommended"
    ],
    "plugins": [
    ],
    "parserOptions": {

    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
    },
    "rules": {
        // Variables
        "no-unused-vars": [2, {"vars": "all", "argsIgnorePattern": "^_"}],

        // Stylistic Issues
        "array-bracket-spacing": 2,
        "block-spacing": 2,
        "brace-style": [2, "stroustrup"],
        "camelcase": 2,
        "comma-spacing": 2,
        "comma-style": 2,
        "consistent-this": 2,
        "indent": ["error", 2],
        "key-spacing": 2,
        "max-depth": 2,
        "max-len": [2, 100],
        "no-trailing-spaces": 2,
        "quote-props": [2, "as-needed"],
        "semi": [2, "always"],
        "space-before-blocks": 2,
        "space-before-function-paren": [2, "never"],
        "space-in-parens": 2,
        "space-infix-ops": 2,
        "spaced-comment": 2,

        // ECMAScript 6
        "arrow-spacing": 2,
        "no-const-assign": 2,
        "no-var": 2,
        "prefer-const": 2,

        // Best Practices
        "dot-notation": 2,
        "eqeqeq": 2,
        "no-case-declarations": 2,
        "no-extra-bind": 2,
        "no-implied-eval": 2,
        "no-invalid-this": 2,
        "no-multi-spaces": 2,
        "no-param-reassign": 2,

        // Possible Errors
        "comma-dangle": 0,
        "no-cond-assign": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
    },
    "globals": {
        "CKEDITOR": false,
        "$": false,
    }
}
